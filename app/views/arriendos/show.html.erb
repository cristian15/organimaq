<div class="content-table">

	<%= link_to 'Volver', arriendos_path, class: 'btn btn-warning' %>
	<br><br>
	<% if !flash[:notice].blank? %>
     <div class = "alert alert-info">
        <%= flash[:notice] %>
     </div>
  <% end %>
	<div class="table-responsive">
	<legend>Reportes</legend>
	<h5>Cantidad de Reports:<%= @report.count %></h5>
	<h5>Horas Total:<%= @report.sum(:horas) %></h5>
	<%= link_to 'Nuevo Reporte', reports_new_path(id: @arriendo.id), class: "btn btn-primary" %><br>	
	<%= search_form_for @search, :remote=>"true", url: arriendo_path(@arriendo.id), :method => :get do |f| %>
			<%= f.label :nombre %>
			<%= f.text_field :nombre_cont %>
			<%= f.date_field :fecha_gteq %>
			<%= f.date_field :fecha_lteq %>
			<%= f.submit %>
		<% end %>
	
		<div id="reports"><%= render "reports" %></div>
		
		<table class="table table-striped table-hover table-bordered">
			<thead>
				<th>Fecha Arriendo</th>
				<th>Fecha Entrega</th>
				<th>Comentario</th>
				<th>Descuento</th>
				<th>Total Arriendo</th>
				<th>Nombre Faena</th>
				<th>Comuna</th>
				<th>Cliente</th>
				<th>MÃ¡quina</th>
				<th>Estado</th>
			</thead>
			
			<tbody>
				<tr>
				
					<td><%= @arriendo.fecha_arriendo %></td>
					<td><%= @arriendo.fecha_entrega %></td>
					<td><%= @arriendo.comentario %></td>
					<td><%= @arriendo.descuento %></td>
					<td><%= @arriendo.total_arriendo %></td>
					<td><%= @arriendo.nombre_faena %></td>
					<td><%= @arriendo.comuna_id %></td>
					<td><%= @arriendo.cliente_id %></td>
					<td><%= @arriendo.maquina_id %></td>
					<td><%= @arriendo.estado %></td>
					<td><%= link_to "Editar", edit_arriendo_path(@arriendo), class: "btn btn-success" %></td>
					
				</tr>
			</tbody>
		</table>
	</div>