<div class="content-table">

	<%= link_to 'Volver', arriendos_path, class: 'btn btn-warning' %>
	<br><br>
	<% if !flash[:notice].blank? %>
     <div class = "alert alert-info">
        <%= flash[:notice] %>
     </div>
  <% end %>
	<div class="table-responsive">
	<legend>Reportes</legend>
	
		<table class="table table-striped table-hover table-bordered">
		  <thead>
			<th>Nombre</th>
			<th>Fecha</th>
			<th>Horas</th>
			<th>Numero</th>
			<th>Detalle</th>			
			<th>Horometro Inicial</th>
			<th>Horometro Final</th>			

		  </thead>
		  <tbody>
		  <% i = 0 %>
		  <% @report.each do |report| %>
			<tr>
			  <td><%= report.nombre %></td>
			  <td><%= report.fecha %></td>
			  <td><%= report.horas %></td>
			  <td><%= report.numero %></td>
			  <td><%= report.detalle  %></td>
			  <td><%= report.horometro_inicial %></td>
			  <td><%= report.horometro_final %></td>
			  <td><%= button_to "Eliminar", report, data: {confirm: "Desea Eliminar '#{report.nombre}'?"}, method: :delete, class: "btn btn-danger" %></td>
					<td><%= link_to "Editar", edit_report_path(report), class: "btn btn-success" %></td>
			 
			</tr>
			<% 
			i = i+1
			end %>
		  </tbody>
		  
		</table>
		<%= link_to 'Nuevo Reporte', reports_new_path(id: @arriendo.id), class: "btn btn-primary" %><br>
		
		<table class="table table-striped table-hover table-bordered">
			<thead>
				<th>Fecha Arriendo</th>
				<th>Fecha Entrega</th>
				<th>Comentario</th>
				<th>Descuento</th>
				<th>Total Arriendo</th>
				<th>Nombre Faena</th>
				<th>Comuna</th>
				<th>Cliente</th>
				<th>MÃ¡quina</th>
				<th>Estado</th>
			</thead>
			
			<tbody>
				<tr>
				
					<td><%= @arriendo.fecha_arriendo %></td>
					<td><%= @arriendo.fecha_entrega %></td>
					<td><%= @arriendo.comentario %></td>
					<td><%= @arriendo.descuento %></td>
					<td><%= @arriendo.total_arriendo %></td>
					<td><%= @arriendo.nombre_faena %></td>
					<td><%= @arriendo.comuna_id %></td>
					<td><%= @arriendo.cliente_id %></td>
					<td><%= @arriendo.maquina_id %></td>
					<td><%= @arriendo.estado %></td>
					<td><%= link_to "Editar", edit_arriendo_path(@arriendo), class: "btn btn-success" %></td>
					
				</tr>
			</tbody>
		</table>
	</div>