<div class="content-table">

	<%= link_to 'Agregar +', clientes_new_path, class: 'btn btn-primary' %>
	<br><br>
	<% if !flash[:notice].blank? %>
     <div class = "alert alert-info">
        <%= flash[:notice] %>
     </div>
  <% end %>
	<div class="table-responsive">
		<table class=""table table-striped table-hover table-bordered">
			<thead>
				<th>Rut</th>
				<th>Cliente</th>
				<th>Direccion</th>
				<th>Contacto</th>
				<th>Telefono2</th>
				<th>Email</th>
				<th>Giro</th>
			</thead>
			
			<tbody>
				<% @cliente.each do |cliente| %>
				<tr>
				
					<td><%= cliente.rut_cliente.to_s + "-" + cliente.dv %></td>
					<td><%= cliente.nombre %></td>
					<td><%= cliente.direccion %></td>
					<td><%= cliente.nombre_contacto %></td>
					<td><%= cliente.telefono %></td>
					<td><%= cliente.mail %></td>
					<td><%= cliente.giro %></td>
					<td><%= link_to "Mostrar", cliente_path(cliente), class: "btn btn-info" %></td>
					<td><%= button_to "Eliminar", cliente, data: {confirm: "Desea Eliminar '#{cliente.nombre}'?"}, method: :delete, class: "btn btn-danger" %></td>
					<td><%= link_to "Editar", edit_cliente_path(cliente), class: "btn btn-success" %></td>
					
				</tr>
				<% end %>
			</tbody>
		</table>
	</div>

</div>
