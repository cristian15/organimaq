<div class="content-table">
    <%= link_to 'Volver', planificacions_path, class: "btn btn-warning" %>
    <br><br>
    <legend>Editar Planificaci√≥n </legend>
    <div class="contentForm">
    
    <%=  %>

      <%= bootstrap_form_for (@planificacion)  do |f| %>
      
      <div class="form-group">       
			
	<div class="table-responsive">
		<legend>Mecanicos</legend>
	
		<table class="table table-striped table-hover table-bordered">
		  <thead>
			<th>Rut</th>
			<th>Nombre</th>
			<th>Apellido Paterno</th>
			<th>Apellido Materno</th>
			<th>Especialidad</th>			
			<th>Jornada</th>
			<th>Valor Hora</th>			
			<th>Horas Cargadas </th>

		  </thead>
		  <tbody>
		  <% i = 0 %>
		  <% @mecanico.each do |mecanico| %>
			<tr>
			  <td><%= mecanico.rut.to_s + "-" + mecanico.dv%></td>
			  <td><%= mecanico.nombre %></td>
			  <td><%= mecanico.apellido_paterno %></td>
			  <td><%= mecanico.apellido_materno %></td>
			  <td><%= TipoMecanico.find(mecanico.tipo_mecanico_id).nombre %></td>
			  <td><%= mecanico.jornada  %></td>
			  <td><%= mecanico.valor_hora  %></td>
			  <td><%= @pla[i].horas_mecanico  %></td>
			 
			</tr>
			<% 
			i = i+1
			end %>
		  </tbody>
		  
		</table>
	</div>
			
			<%= link_to 'Agregar Mecanico +', mecanicos_planificacions_new_path(id: @planificacion.id), class: "btn btn-primary" %>
           <br><br>
		   
		   
            <%= f.select :maquina_id, [["#{Maquina.find(@planificacion.maquina_id).nombre}", @planificacion.maquina_id]], {label: "Maquina"}, {class: "selectpicker"} %>

            <%= f.date_select :fecha %>

            <%= f.text_area :descripcion %>
            
            <%= f.select :estado, [["Abierta"], [ "Cerrada"]], { label: "Estado" }, { class: "selectpicker" } %>

            <%= f.select :tipo, [["Mantencion"], [ "Reparacion"]], { label: "Tipo" }, { class: "selectpicker" } %>

            <%= f.number_field :horometro%>

            <%= f.number_field :kilometraje %>

            <%= f.number_field :total_hh %>

            <%= f.select :taller_externo, [["NO"], [ "SI"]], {label: "Taller Externo"}, {class: "selectpicker"} %>

            <%= f.select :factura_pendiente, [["NO"], [ "SI"]], {label: "Factura Pendiente"}, {class: "selectpicker"} %>

            
        
          <%= f.primary 'Editar' %>
       </div>
       

      <% end %>
      </div>

  </div>