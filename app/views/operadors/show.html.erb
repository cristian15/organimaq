<div class="content-table">

	<%= link_to 'Agregar +', operadors_new_path, class: 'btn btn-primary' %>
	<%= link_to 'Volver', operadors_path, class: "btn btn-warning" %>
	<br><br>
	<% if !flash[:notice].blank? %>
     <div class = "alert alert-info">
        <%= flash[:notice] %>
     </div>
	<% end %>
  
  <% if @operador.foto.blank? %>
      <%= image_tag "SINFOTO.png", class: "img-thumbnail" %>
  <% else %>
      <img class="img-thumbnail" alt="Foto" width="20%" src="<%= @operador.foto_url %>">
      
  <% end %>
  
	<div class="table-responsive">
		<%= render "multas" %>
		
		<br>
		<%= search_form_for @search, :remote=>"true", url: operador_path(@operador.id), :method => :get do |f| %>
			<%= f.label :nombre %>
			<%= f.text_field :nombre_cont %>
			<%= f.date_field :fecha_gteq %>
			<%= f.date_field :fecha_lteq %>
			<%= f.submit %>
		<% end %>
		<div id="reports"><%= render "reports" %></div>
		
		<table class="table table-striped table-hover table-bordered">
			<thead>
				<th>Rut</th>
				<th>Nombre</th>
				<th>Apellido Paterno</th>
				<th>Apellido Materno</th>
				<th>Direcci√≥n</th>
				<th>Telefono</th>
				<th>Calzado</th>
				<th>Oberol</th>
				<th>Chaleco</th>
			</thead>
			
			<tbody>
				<tr>
				
					<td><%= @operador.rut.to_s + "-" + @operador.dv %></td>
					<td><%= @operador.nombre %></td>
					<td><%= @operador.apellido_p %></td>
					<td><%= @operador.apellido_m %></td>
					<td><%= @operador.direccion %></td>
					<td><%= @operador.telefono %></td>
					<td><%= @operador.calzado %></td>
					<td><%= @operador.oberol %></td>
					<td><%= @operador.chaleco %></td>
					<tr>
					<td><%= link_to "Editar", edit_operador_path(@operador), class: "btn btn-success" %></td></tr>
					
				</tr>
			</tbody>
		</table>
	</div>

</div>