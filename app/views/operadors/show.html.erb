<div class="content-table">

	<%= link_to 'Agregar +', operadors_new_path, class: 'btn btn-primary' %>
	<%= link_to 'Volver', operadors_path, class: "btn btn-warning" %>
	<br><br>
	<% if !flash[:notice].blank? %>
     <div class = "alert alert-info">
        <%= flash[:notice] %>
     </div>
	<% end %>
  
  <% if @operador.foto.blank? %>
      <%= image_tag "SINFOTO.png", class: "img-thumbnail" %>
  <% else %>
      <img class="img-thumbnail" alt="Foto" width="20%" src="<%= @operador.foto_url %>">
      
  <% end %>
  <legend>Multas Operador</legend>
	<div class="table-responsive">
		<table class="table table-striped table-hover table-bordered">
			<thead>
				<th>Fecha</th>
				<th>Lugar</th>
				<th>Descripción</th>
				<th>Valor Multa</th>
			</thead>
			
			<tbody>
			<% i = 0 %>
			<% @multa.each do |mul| %>
				<tr>
				
					<td><%= mul.fecha %></td>
					<td><%= mul.lugar %></td>
					<td><%= mul.descripcion %></td>
					<td><%= mul.total_multa %></td>
					
					<td><%= link_to "Editar", edit_multa_path(mul), class: "btn btn-success" %></td>
					
				</tr>
				<%
				i = i+1
				end %>
			</tbody>
		</table>
		
		<%= link_to 'Añadir Multa', multas_new_path(id: @operador.id), class: "btn btn-primary" %><br><br>
	
		<table class="table table-striped table-hover table-bordered">
			<thead>
				<th>Rut</th>
				<th>Nombre</th>
				<th>Apellido Paterno</th>
				<th>Apellido Materno</th>
				<th>Dirección</th>
				<th>Telefono</th>
				<th>Calzado</th>
				<th>Oberol</th>
				<th>Chaleco</th>
			</thead>
			
			<tbody>
				<tr>
				
					<td><%= @operador.rut.to_s + "-" + @operador.dv %></td>
					<td><%= @operador.nombre %></td>
					<td><%= @operador.apellido_p %></td>
					<td><%= @operador.apellido_m %></td>
					<td><%= @operador.direccion %></td>
					<td><%= @operador.telefono %></td>
					<td><%= @operador.calzado %></td>
					<td><%= @operador.oberol %></td>
					<td><%= @operador.chaleco %></td>
					<tr>
					<td><%= link_to "Editar", edit_operador_path(@operador), class: "btn btn-success" %></td></tr>
					
				</tr>
			</tbody>
		</table>
	</div>

</div>