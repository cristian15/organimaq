<div class="content-table">
<legend><h2>Operadores</h2></legend>
	<%= link_to 'Agregar +', operadors_new_path, class: 'btn btn-primary' %>
	<br>
	<% if !flash[:notice].blank? %>
     <div class = "alert alert-info">
        <%= flash[:notice] %>
     </div>
    <% end %>
	<br>
	
	<%= search_form_for @search, :remote=>"true", url: operadors_path, :method => :get do |f| %>
		<%= f.text_field :nombre_cont %>
		<%= f.submit %>
	<% end %>
	<br>
	<div id="operadors">
	<%= render "operadors" %> 
	</div>

</div>