
<%= link_to "Descargar Excel ...", arriendo_path( format: "xlsx" ), class: "btn btn-info"  %>

<table class="table table-striped table-hover table-bordered">
		  <thead>
			<th>Nombre</th>
			<th>Fecha</th>
			<th>Horas</th>
			<th>Numero</th>
			<th>Detalle</th>
			<th>Operador</th>			
			<th>Horometro Inicial</th>
			<th>Horometro Final</th>			

		  </thead>
		  <tbody>
		  <% @report.each do |report| %>
			<tr>
			  <td><%= report.nombre %></td>
			  <td><%= report.fecha %></td>
			  <td><%= report.horas %></td>
			  <td><%= report.numero %></td>
			  <td><%= report.detalle  %></td>
			  <td><%= Operador.find(report.operador_id).nombre%> <%=Operador.find(report.operador_id).apellido_p  %></td>
			  <td><%= report.horometro_inicial %></td>
			  <td><%= report.horometro_final %></td>
			  <td><%= button_to "Eliminar", report, data: {confirm: "Desea Eliminar '#{report.nombre}'?"}, method: :delete, class: "btn btn-danger" %></td>
			  <td><%= link_to "Editar", edit_report_path(report), class: "btn btn-success" %></td>
			 
			</tr>
			<% 
			end %>
		  </tbody>
		  
		</table>
		<%= paginate @report%>
		
<% 

%>