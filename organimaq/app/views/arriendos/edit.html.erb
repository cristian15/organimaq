<div class="contentForm">
<legend><h2>Editar Arriendo</h2></legend>
<%= link_to 'Volver', arriendos_path, class: "btn btn-warning" %><br>

	<div class="table-responsive">
		<legend>Reportes</legend>
	
		<table class="table table-striped table-hover table-bordered">
		  <thead>
			<th>Nombre</th>
			<th>Fecha</th>
			<th>Horas</th>
			<th>Numero</th>
			<th>Detalle</th>			
			<th>Horometro Inicial</th>
			<th>Horometro Final</th>			

		  </thead>
		  <tbody>
		  <% i = 0 %>
		  <% @report.each do |report| %>
			<tr>
			  <td><%= report.nombre %></td>
			  <td><%= report.fecha %></td>
			  <td><%= report.horas %></td>
			  <td><%= report.numero %></td>
			  <td><%= report.detalle  %></td>
			  <td><%= report.horometro_inicial %></td>
			  <td><%= report.horometro_final %></td>
			 
			</tr>
			<% 
			i = i+1
			end %>
		  </tbody>
		  
		</table>
		

	<%= bootstrap_form_for (@arriendo)  do |f| %>
	<div class="form-group">	
		<%= f.date_field :fecha_arriendo, :required => true %>
		<%= f.date_field :fecha_entrega, :required => true %>
		<%= f.text_field :comentario %>
		<%= f.number_field :descuento, value: 0 %>
		<%= f.number_field :total_arriendo, label: "Valor Arriendo", :disabled=>true , value: 0 %>
		<%= f.text_field :nombre_faena, label: "Faena" %>
		<%= f.select :estado, [["Facturado"], ["Abierta"], ["No Facturado"]], { label: "Estado" }, { class: "selectpicker" } %>
		<%= f.collection_select :maquina_id, Maquina.all, :id, :nombre, :required => true %>
		<%= f.collection_select :cliente_id, Cliente.all, :id, :nombre, :required => true %>

		
		<%= f.primary 'Editar' %>
	
	</div>
	
	<% end %>
	
</div>