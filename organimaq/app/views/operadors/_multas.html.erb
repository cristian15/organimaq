<legend>Multas Operador</legend>
  <h5>Cantidad de Infracciones:<%= @infraction.count %></h5>
<table class="table table-striped table-hover table-bordered">
			<thead>
				<th>Fecha</th>
				<th>Lugar</th>
				<th>Descripción</th>
				<th>Valor Multa</th>
			</thead>
			
			<tbody>
			<% @infraction.each do |mul| %>
				<tr>
				
					<td><%= mul.fecha %></td>
					<td><%= mul.lugar %></td>
					<td><%= mul.descripcion %></td>
					<td><%= mul.total_multa %></td>
					
					<td><%= link_to "Editar", edit_infraction_path(mul), class: "btn btn-success" %></td>
					<td><%= button_to "Eliminar", mul, data: {confirm: "Desea Eliminar la Multa fecha: '#{mul.fecha}'?"}, method: :delete, class: "btn btn-danger" %></td>
					
				</tr>
				<% end %>
			</tbody>
		</table>
		<%= link_to "Añadir Multa +", new_infraction_path(id: @operador.id),data: { modal: true, title: "Ingresa Multa" },  class: "btn btn-primary" %>
		