
<legend>Repuestos Usados</legend>
<%= search_form_for @search, :remote=>"true", url:edit_planificacion_path(@planificacion.id), :method => :get do |f| %>
		<%= f.label :nombre %>
		<%= f.text_field :nombre_cont %>
		<%= f.submit %>
		<% end %>
<table class="table table-striped table-hover table-bordered">
  <thead>
	<th>Codigo</th>
	<th>Nombre</th>
	<th>Descripcion</th>
	<th>Tipo Repuesto</th>			
	<th>Cantidad</th>

  </thead>
  <tbody>
  <% i = 0 %>
  <% @repuestos.each do |repuesto| %>
	<tr>
	  <td><%= repuesto.codigo%></td>
	  <td><%= repuesto.nombre %></td>
	  <td><%= repuesto.descripcion %></td>
	  <td><%= TipoRepuesto.find(repuesto.tipo_repuesto_id).nombre %></td>
	  <td><%= @RepuestoPla[i].cantidad  %></td>			 
	</tr>
	<% 
	i = i+1
	end %>
  </tbody>
  
</table>
<%= paginate @repuestos %><br>

			
<%= link_to "Agregar Repuesto +", new_repuestos_planificacion_path(id: @planificacion.id), data: { modal: true },  class: "btn btn-primary" %>
