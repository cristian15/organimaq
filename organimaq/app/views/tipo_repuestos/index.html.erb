<div class="content-table">
  <%= link_to 'Agregar +', tipo_repuestos_new_path, class: "btn btn-primary" %>
  <br><br>

  <% if !flash[:notice].blank? %>
     <div class = "alert alert-info">
        <%= flash[:notice] %>
     </div>
  <% end %>

  <div class="table-responsive">
    <table class="table table-striped table-hover ">
      <thead>
        <th>Tipo de Maquinaria</th>

      </thead>
      <tbody>
      <% @tipo_repuesto.each do |tipo_repuesto| %>
        <tr>
          <td><%= tipo_repuesto.nombre %></td>
          <td><%= button_to "Eliminar", tipo_repuesto, method: :delete, class: "btn btn-danger",  data: {confirm: "Desea Eliminar '#{tipo_repuesto.nombre}'?"} %></td>
          <td><%= link_to "Editar", edit_tipo_repuesto_path(tipo_repuesto), class: "btn btn-success" %></td>

        </tr>
        <% end %>
      </tbody>
      
      
    </table>
  </div>
</div>