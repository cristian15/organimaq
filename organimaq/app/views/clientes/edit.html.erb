<div class="contentForm">
<legend>Editar Cliente</legend>

	<%= bootstrap_form_for (@cliente)  do |f| %>
	<div class="form-group">	
		<%= f.number_field :rut_cliente, :maxlength => 8, label: "Rut", :required => true %>
		<%= f.text_field :dv %>
		<%= f.text_field :nombre, label: "Cliente", :required => true %>
		<%= f.text_field :direccion %>
		<%= f.text_field :nombre_contacto, label: "Nombre Contacto" %>
		<%= f.text_field :telefono %>
		<%= f.email_field :mail, label: "Email" %>
		<%= f.text_field :giro %>
		
		<%= f.primary 'Editar' %>
	
	</div>
	
	<% end %>
	
</div>

<script>
$("#cliente_rut_cliente").on('change',
  function(){

   $("#cliente_dv").val(calculaDigitoVerificador($("#cliente_rut_cliente").val()));

  });
</script>
