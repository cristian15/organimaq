<div class="content-table">
  <%= link_to 'Volver', repuestos_path, class: "btn btn-warning" %>
  <br><br>

  <% if @repuesto.foto.blank? %>
  		<%= image_tag "SINFOTO.png", class: "img-thumbnail" %>
  <% else %>
  		<img class="img-thumbnail" alt="Foto" width="50%" src="<%= @repuesto.foto_url %>">
  		
  <% end %>

  <br><br>
  <div class="table-responsive">
    <table class="table table-striped table-hover table-bordered">
      <thead>
        <th>Codigo</th>
        <th>Repuesto</th>
        <th>Descripcion</th>
        <th>Stock</th>
        

      </thead>
      <tbody> <tr>
          <td><%= @repuesto.codigo %></td>
          <td><%= @repuesto.nombre %></td>
          <td><%= @repuesto.descripcion %></td>
          <td><%= @repuesto.stock %></td>
        </tr>
      </tbody>
    </table>
    

  </div>
</div>