<div class="content-table">
<legend><h2>Repuestos</h2></legend>
  <%= link_to 'Agregar +', repuestos_new_path, class: "btn btn-primary" %>
  <br><br>

  <% if !flash[:notice].blank? %>
     <div class = "alert alert-info">
        <%= flash[:notice] %>
     </div>
  <% end %>
  
  <%= search_form_for @search, :remote=>"true", url: repuestos_path, :method => :get do |f| %>
		<%= f.label "Nombre" %>
		<%= f.text_field :nombre_cont %>
		<%= f.label "Codigo" %>
		<%= f.text_field :codigo_cont %>
		<%= f.submit :value=>"Buscar" %>
	<% end %>
	<div id="repuestos">
		<%= render "repuestos" %> 
	</div>
  
</div>
